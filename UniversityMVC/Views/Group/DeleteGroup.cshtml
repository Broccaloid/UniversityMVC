@model Group
@{
    ViewBag.Title = "Delete Group";
}

<div>
    <h3>Подтверждение удаления группы</h3>
    <dl class="dl-horizontal">
        <dt>Название</dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div>
        <form asp-controller="Group" asp-action="DeleteGroup" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>