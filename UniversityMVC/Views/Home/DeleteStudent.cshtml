@model Student
@{
    ViewBag.Title = "Delete Student";
}

<div>
    <h3>Подтверждение удаления студента</h3>
    <dl class="dl-horizontal">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="DeleteStudent" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>